<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- Servlets -->
    <servlet>
        <servlet-name>Agent</servlet-name>
        <jsp-file>/agent/AllAgents.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddAgent</servlet-name>
        <jsp-file>/agent/AddAgent.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>EditAgent</servlet-name>
        <jsp-file>/agent/EditAgent.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Travel Packages</servlet-name>
        <jsp-file>/package.jsp</jsp-file>
    </servlet>

    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>Agent</servlet-name>
        <url-pattern>/agent/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAgent</servlet-name>
        <url-pattern>/agent/AddAgent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAgent</servlet-name>
        <url-pattern>/agent/EditAgent/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Travel Packages</servlet-name>
        <url-pattern>/travel-packages</url-pattern>
    </servlet-mapping>
</web-app>