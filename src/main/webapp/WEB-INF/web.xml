<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Agent</servlet-name>
        <jsp-file>/agent/AllAgents.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddAgent</servlet-name>
        <jsp-file>/agent/AddAgent.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>EditAgent</servlet-name>
        <jsp-file>/agent/EditAgent.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Booking</servlet-name>
        <jsp-file>/bookingdetails/AllBookings.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddBooking</servlet-name>
        <jsp-file>/bookingdetails/AddBookings.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>EditBooking</servlet-name>
        <jsp-file>/bookingdetails/EditBooking.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Agent</servlet-name>
        <url-pattern>/agent/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAgent</servlet-name>
        <url-pattern>/agent/AddAgent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAgent</servlet-name>
        <url-pattern>/agent/EditAgent/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Booking</servlet-name>
        <url-pattern>/bookingdetails/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBooking</servlet-name>
        <url-pattern>/bookingdetails/AddBooking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditBooking</servlet-name>
        <url-pattern>/bookingdetails/EditBooking/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Customer</servlet-name>
        <jsp-file>/customer/AllCustomers.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddCustomer</servlet-name>
        <jsp-file>/customer/AddCustomer.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>EditCustomer</servlet-name>
        <jsp-file>/customer/EditCustomer.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Customer</servlet-name>
        <url-pattern>/customer/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCustomer</servlet-name>
        <url-pattern>/customer/AddCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCustomer</servlet-name>
        <url-pattern>/customer/EditCustomer/*</url-pattern>
    </servlet-mapping>




</web-app>