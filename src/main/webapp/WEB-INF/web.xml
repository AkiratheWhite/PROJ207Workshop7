<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Agent</servlet-name>
        <jsp-file>/agent.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Agent</servlet-name>
        <url-pattern>/agent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Customer</servlet-name>
        <jsp-file>/customer/AllCustomers.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AddCustomer</servlet-name>
        <jsp-file>/customer/AddCustomer.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>EditCustomer</servlet-name>
        <jsp-file>/customer/EditCustomer.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Customer</servlet-name>
        <url-pattern>/customer/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCustomer</servlet-name>
        <url-pattern>/customer/AddCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCustomer</servlet-name>
        <url-pattern>/customer/EditCustomer/*</url-pattern>
    </servlet-mapping>




</web-app>